{
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript",
    "endOfLine": "auto",
    "printWidth": 90,
    "useTabs": false,
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.css",
            "options": {
                "semi": false,
                "parser": "css"
            }
        }
    ]
}
